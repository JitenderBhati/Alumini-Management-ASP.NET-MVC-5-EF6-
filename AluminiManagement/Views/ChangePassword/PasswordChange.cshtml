@model AluminiManagement.Models.PasswordChange

@if (Session["Email"] == null)
{
    Response.Redirect("~/Account/SmartLogin");
}
@{
    ViewBag.Title = "PasswordChange";
    Layout = "~/Views/Shared/_adminPanelLayout.cshtml";
}
<br />
<br />
<br />

@using (Html.BeginForm("PasswordChanged", "ChangePassword", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(c => c.password)
        <br />
        @Html.PasswordFor(c => c.password, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.password, "", new { @class = "text-danger" })
    </div>
    <br />
    <div class="form-group">
        @Html.LabelFor(c => c.confirmpassword)
        <br />
        @Html.PasswordFor(c => c.confirmpassword, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.confirmpassword, "", new { @class = "text-danger" })
    </div>
    <br />
    <br />
    <div class="form-group">
        <button class="btn btn-primary" type="submit">Change Password</button>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

